    <script>
        function updateOutput(inputId, outputId, descriptionId) {
            const input = document.getElementById(inputId);
            const output = document.getElementById(outputId);
            const description = document.getElementById(descriptionId);
            const level = getLevelText(input.value, inputId);
            const levelDescription = getLevelDescription(input.value, inputId);
            output.textContent = level;
            description.textContent = levelDescription;
        }

        function getLevelText(value, question) {
            const levels = [
                "Level 1",
                "Level 2",
                "Level 3",
                "Level 4",
                "Level 5",
                "Level 6",
                "Level 7",
                "Level 8",
                "Level 9",
                "Level 10"
            ];

            const levelIndex = Math.ceil(value / 10 * levels.length) - 1;
            return `${levels[levelIndex]}: ${getLevelDescription(value, question)}`;
        }

        function updateOutput(inputId, outputId, descriptionId) {
    const input = document.getElementById(inputId);
    const output = document.getElementById(outputId);
    const description = document.getElementById(descriptionId);
    const level = getLevelText(input.value, inputId);
    const levelDescription = getLevelDescription(input.value, inputId);
    output.textContent = level;
    description.textContent = levelDescription;
}

function getLevelText(value, question) {
    const levels = [
        "Level 1",
        "Level 2",
        "Level 3",
        "Level 4",
        "Level 5",
        "Level 6",
        "Level 7",
        "Level 8",
        "Level 9",
        "Level 10"
    ];

    const levelIndex = Math.floor((value - 1) / 1); // Calculate the correct index
    return `${levels[levelIndex]}`;
}

function getLevelDescription(value, question) {
    let descriptions;

    switch (question) {
        case 'analyticalSkills':
            descriptions = [
                "Understands basic PPC metrics and terminology. Requires guidance in interpreting data.",
                "Shows improvement in analysing PPC data. Begins to draw insights from data trends.",
                "Analyses PPC data effectively to identify trends and patterns. Demonstrates understanding of statistical concepts.",
                "Utilises third party analytical tools for in-depth PPC analysis. Capable of performing segmentation and cohort analysis.",
                "Conducts advanced PPC data analysis, including regression analysis. Develops their own experimental frameworks for analysing performance.",
                "Proficient in setting up and using third-party attribution software, and interpreting the data effectively. Skilled in communicating data from multiple attribution perspectives and strategically implementing insights.",
                "Applies AI and machine learning techniques to PPC data analysis. Develops predictive models for campaign and account forecasting.",
                "Has a backlog of case studies for effective data analysis that’s shared with the department. Mentors others and leads workshops in advanced data analysis techniques.",
                "Shapes the organisation's data analytics vision for PPC. Innovates data analysis methodologies for enhanced ROI.",
                "Sets industry standards in PPC data analytics. Transforms data analytics by influencing and shaping the PPC industry."
            ];
            break;
        case 'technicalProficiency':
            descriptions = [
                "Executes basic PPC campaign setup and optimization tasks. Requires guidance in using PPC platforms.",
                "Shows improvement in navigating PPC platforms. Begins to experiment with ways of running/optimising campaigns.",
                "Demonstrates proficiency in setting up and managing PPC campaigns. Successfully utilises the advanced features of PPC platforms for effective results.",
                "Implements advanced campaign structures and bidding strategies at scale. Capable of troubleshooting complex technical issues in campaigns on their own.",
                "Starting to utilise APIs and scripts to automate and bring efficiency to PPC tasks. Implements advanced tracking and tagging solutions on their accounts.",
                "Through experience and experimentation, developing a unique set of best practices to ensure account success. Shares and develops these bespoke solutions for campaign optimization with the department.",
                "Frequently participating in the ideation of new PPC tools and scripts to innovate our ways of working. Has published a whitepaper showcasing an innovative approach to PPC, supported by case studies and client testimonials.",
                "Spearheaded the transformation of a large account through strategic account infrastructure, scaling PPC to impact the overall business objectives.",
                "Drives the agency's PPC technology roadmap, imparting expertise through dynamic panel discussions and influential industry presentations. Collaborates seamlessly across departments, leveraging technical prowess to propel the agency forward.",
                "Pioneers cutting-edge advancements in PPC technology development, setting industry standards. Transforms PPC technology into a strategic asset, driving innovation and achieving unprecedented results for the organisation."
            ];
            break;
        case 'creativeThinking':
            descriptions = [
                "Generates basic ad copy and creative ideas. Requires guidance in understanding brand messaging.",
                "Shows improvement in crafting engaging ad content. Begins to experiment with different creative formats.",
                "Demonstrates proficiency in creating compelling ad copy and visuals. Can adapt creatives to client’s bespoke tone of voice and brand identity.",
                "Can effectively leverage different creatives across various campaigns across the full funnel. Has experience in tailoring creatives for different audience segments for the same client.",
                "Develops innovative ad concepts and works on developing themed campaign strategies with the client. Utilises psychological principles to enhance ad effectiveness and implements advanced storytelling techniques in ad campaigns.",
                "Has experience in working on full funnel creative campaigns and making sure these are impactful across departments. Has successful case studies of impactful A/B tests with PPC creatives and has shared these across the department.",
                "Consistently delivers breakthrough creative concepts. Mentors others in developing creative skills.",
                "Leads the department in creative ideation for our clients PPC campaigns. Develops cohesive brand narratives across multiple channels.",
                "Shapes the organisation's creative vision for PPC advertising. Innovates new approaches to engage target audiences.",
                "Sets industry benchmarks for creative excellence in PPC advertising. Transforms creative thinking into a competitive advantage for the organisation."
            ];
            break;
        case 'projectTimeManagement':
            descriptions = [
                "Manages simple PPC tasks with guidance. Requires assistance in prioritising and planning workload.",
                "Shows improvement in organising PPC tasks and deadlines. Begins to use basic project management tools.",
                "Manages multiple PPC campaigns effectively. Utilises project management software to track progress.",
                "Plans and executes PPC campaigns within realistic specified timelines. Capable of handling unexpected project changes.",
                "Leads cross-functional PPC project teams. Implements agile project management methodologies.",
                "Oversees complex PPC campaigns from inception to completion. Manages project risks and escalations effectively.",
                "Develops and implements strategic project plans for PPC initiatives. Mentors others in project management best practices.",
                "Aligns PPC projects with organisational goals and objectives. Implements project governance frameworks for improved efficiency.",
                "Shapes the organisation's project management vision for PPC. Innovates new project management methodologies tailored for PPC campaigns.",
                "Defines industry standards in project management for PPC initiatives. Transforms project management into a strategic capability for the organisation."
            ];
            break;
        case 'communicationClientManagement':
            descriptions = [
                "Communicates PPC updates and information with guidance. Requires support in understanding client requirements.",
                "Shows improvement in articulating PPC strategies and results. Begins to build rapport with clients.",
                "Communicates effectively with clients, conveying PPC insights clearly. Demonstrates active listening and empathy in client interactions.",
                "Manages client expectations and relationships proactively. Capable of handling challenging client conversations.",
                "Develops and presents comprehensive PPC strategies to clients. Navigates complex client relationships with ease.",
                "Leads client meetings and presentations with confidence. Builds long-term partnerships with clients through strategic collaboration.",
                "Anticipates client needs and provides proactive recommendations. Resolves client issues promptly and effectively.",
                "Aligns PPC strategies with clients' business objectives. Develops client retention and growth strategies.",
                "Shapes the organisation's client management vision for PPC services. Innovates new approaches to enhance client satisfaction and loyalty.",
                "Defines industry standards in client management for PPC agencies. Transforms client relationships into a strategic asset for the organisation."
            ];
            break;
        case 'strategy':
            descriptions = [
                "Follows predefined PPC strategies with guidance. Requires support in understanding strategic objectives.",
                "Shows improvement in formulating PPC tactics aligned with goals. Begins to analyse competitive landscapes.",
                "Develops comprehensive PPC strategies tailored to client objectives. Demonstrates understanding of market dynamics and trends.",
                "Creates and executes strategic PPC plans for client campaigns. Capable of adapting strategies based on performance metrics.",
                "Develops innovative PPC strategies to gain competitive advantage. Utilises data-driven insights to optimise strategy implementation.",
                "Leads strategic planning initiatives across multiple PPC campaigns. Guides teams in translating strategic objectives into actionable plans.",
                "Designs overarching PPC strategies aligned with organisational goals. Provides thought leadership on industry trends and best practices.",
                "Drives strategic direction for the organisation's PPC services. Develops and implements breakthrough strategies for client success.",
                "Shapes the organisation's strategic vision for PPC leadership. Innovates new approaches to disrupt the PPC landscape.",
                "Sets industry benchmarks for strategic excellence in PPC marketing. Transforms strategic thinking into a competitive advantage for the organisation."
            ];
            break;
        default:
            descriptions = [];
    }

    const levelIndex = Math.floor((value - 1) / 1); // Calculate the correct index
    return descriptions[levelIndex];
}

function submitForm(event) {
event.preventDefault();

const name = document.getElementById("name").value;
const analyticalSkills = document.getElementById("analyticalSkills").value;
const technicalProficiency = document.getElementById("technicalProficiency").value;
const creativeThinking = document.getElementById("creativeThinking").value;
const projectTimeManagement = document.getElementById("projectTimeManagement").value;
const communicationClientManagement = document.getElementById("communicationClientManagement").value;
const strategy = document.getElementById("strategy").value;

const csvContent = `Name,Category,Score,Description
\n${name},Analytical Skills,${analyticalSkills},"${getLevelText(analyticalSkills, 'analyticalSkills')} - ${getLevelDescription(analyticalSkills, 'analyticalSkills')}"
\n${name},Technical Proficiency,${technicalProficiency},"${getLevelText(technicalProficiency, 'technicalProficiency')} - ${getLevelDescription(technicalProficiency, 'technicalProficiency')}"
\n${name},Creative Thinking,${creativeThinking},"${getLevelText(creativeThinking, 'creativeThinking')} - ${getLevelDescription(creativeThinking, 'creativeThinking')}"
\n${name},Project and Time Management,${projectTimeManagement},"${getLevelText(projectTimeManagement, 'projectTimeManagement')} - ${getLevelDescription(projectTimeManagement, 'projectTimeManagement')}"
\n${name},Communication and Client Management,${communicationClientManagement},"${getLevelText(communicationClientManagement, 'communicationClientManagement')} - ${getLevelDescription(communicationClientManagement, 'communicationClientManagement')}"
\n${name},Strategy,${strategy},"${getLevelText(strategy, 'strategy')} - ${getLevelDescription(strategy, 'strategy')}"`;

const blob = new Blob([csvContent], { type: "text/csv" });
const url = URL.createObjectURL(blob);
const a = document.createElement("a");
a.href = url;
a.download = "self_assessment_scores.csv";

document.body.appendChild(a);
a.click();
document.body.removeChild(a);
}
</script>
</body>
