            <input type="range" id="projectTimeManagement" name="projectTimeManagement" min="1" max="10" value="1" oninput="updateOutput('projectTimeManagement', 'projectTimeManagementOutput', 'projectTimeManagementDescription')" required>
            <output id="projectTimeManagementOutput">Level 1: Manages simple PPC tasks with guidance.</output>
